{
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "editor.formatOnSave": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "black-formatter.args": [
        "--line-length=120"
    ],
    "mypy-type-checker.args": [
        "--follow-imports=silent",
        "--ignore-missing-imports",
        "--show-column-numbers",
        "--no-pretty",
        "--exclude",
        "BUILD"
    ],
    "isort.args": [
        "--profile",
        "black",
        "--line-length=120"
    ],
    "flake8.args": [
        "--max-line-length=120"
    ],
    "conventionalCommits.scopes": [],
    "conventionalCommits.autoCommit": true,
    "conventionalCommits.lineBreak": ">",
    "python.envFile": "${workspaceFolder}/.env",
    "python.defaultInterpreterPath": "${workspaceFolder}/dist/export/python/virtualenvs/python-default/3.12.12/bin/python",
    "github.copilot.chat.copilotDebugCommand.enabled": false,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "terminal.integrated.env.osx": {
        "PYTHONDONTWRITEBYTECODE": "1"
    },
    "github-actions.workflows.pinned.workflows": [
        ".github/workflows/dev-tribe-infra.yml"
    ],
    "github.copilot.enable": {
        "*": false,
        "plaintext": false,
        "markdown": false,
        "scminput": false
    },
    "python.testing.pytestArgs": [
        "."
    ]
}